  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  margin-top: 20px;
}
#c3 {
  background-color: white; /* Blue background */
  padding: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  margin-top: 20px;
  margin-right:0.5vh;
}
#footer {
  grid-area: footer;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: #FfC0CB; 
  color: black;
  border-radius: 20px;
  padding: 20px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}

#footer a:hover {
  color: #ff6600;
}

.gif {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.gif p a {
  margin-left: 20px;
}

.con img {
  height: 40px;
  width: 40px;
  margin-top: 10px;
}

.con h4 {
  margin: 5px 0;
}

@media only screen and (max-width: 500px) {
  .container {
    grid-template-columns: 1fr;
    grid-template-rows: repeat(7, auto);
    grid-template-areas:
      "nav"
      "main"
      "sidebar"
      "component1"
      "component2"
      "component3"
      "footer";
  }

  .sidebar {
    width: 100%;
    box-shadow: none;
  }
}
</style>
</head>
